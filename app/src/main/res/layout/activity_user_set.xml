<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chaiche.note.UserSetActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_toolbar_background"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/user_set_activity_toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="啟動密碼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_set_activity_switch_enablepassword"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/user_set_lin_enablepassword">

            <TextView
                android:text="輸入密碼"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_set_activity_txv_enablepassword"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="?android:attr/listChoiceIndicatorSingle"
                    android:id="@+id/user_set_activity_igv_enablepassword_1"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="?android:attr/listChoiceIndicatorSingle"
                    android:id="@+id/user_set_activity_igv_enablepassword_2"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="?android:attr/listChoiceIndicatorSingle"
                    android:id="@+id/user_set_activity_igv_enablepassword_3"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="?android:attr/listChoiceIndicatorSingle"
                    android:id="@+id/user_set_activity_igv_enablepassword_4"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                        <TextView
                            android:text="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                        <TextView
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:text="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                        <TextView
                            android:text="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                        <TextView
                            android:text="6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:text="7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                        <TextView
                            android:text="8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                        <TextView
                            android:text="9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="txv_password_click"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />

                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
